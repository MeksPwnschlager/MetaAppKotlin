<?xml version="1.0" encoding="utf-8"?>
<merge>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/meta_dunkelblau">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:paddingTop="8dp"
                android:drawableTop="@drawable/button_play"
                android:background="@drawable/background_circle_white"
                android:id="@+id/activity_content_screeninvader_playerbar_button_play"
                android:textOff=""
                android:textOn=""
                android:textSize="0dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_skip_previous_white_24dp"
                android:background="@android:color/transparent"
                android:layout_toLeftOf="@id/activity_content_screeninvader_playerbar_button_play"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_skip_next_white_24dp"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@id/activity_content_screeninvader_playerbar_button_play"/>

        </RelativeLayout>


    </LinearLayout>

</merge>