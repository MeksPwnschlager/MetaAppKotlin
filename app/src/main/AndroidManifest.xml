<?xml version="1.0" encoding="utf-8"?>
<manifest package="at.metalab.meks.metapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".LaunchActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".screeninvader.ScreenInvaderActivtiy"
            android:label="@string/title_screeninvader">
        </activity>

        <activity
            android:name=".control.ControlActivtiy"
            android:label="@string/title_control">
        </activity>

        <activity
            android:name=".issues.IssuesActivity"
            android:label="@string/title_issues">
        </activity>

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_settings">
        </activity>

    </application>

</manifest>